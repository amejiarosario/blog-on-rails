- @post.tags.build
= form_for @post do |f|
	-if @post.errors.any?
		#error_explanation
			%h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
			%ul
				- @post.errors.full_messages.each do |msg|
					%li= msg
	.field
		= f.label :title
		= f.text_field :title
	.field
		=# tinymce :theme => "advanced"
		= f.label :content
		= f.text_area :content, class: "tinymce", style: "width: 100%; height: 40%;"
	%h2 Tags:
	= render :partial => 'tags/form', :locals => {:form => f}
	.actions
		= f.submit 'Save'
